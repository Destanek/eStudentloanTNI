<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TapLayout" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="tabTextColor">#fff</item>
        <item name="tabIndicatorColor">@color/colorTap</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:colorBackground">#99FFFFFF</item>
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loading..</item>
        <item name="DialogSpotColor">@android:color/holo_blue_bright</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="CustomDialogTransaction" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loading..</item>
        <item name="DialogSpotColor">@android:color/holo_blue_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="CustomDialogRegister" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Creating Account...</item>
        <item name="DialogSpotColor">@android:color/holo_green_light</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="CustomDialogLogin" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loging In...</item>
        <item name="DialogSpotColor">@android:color/holo_green_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
</resources>
